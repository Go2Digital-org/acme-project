APP_NAME="ACME CSR Platform Testing"
APP_ENV=testing
APP_KEY=base64:test123456789012345678901234567890123456789=
APP_DEBUG=false
APP_URL=http://127.0.0.1:8000
DEBUGBAR_ENABLED=false

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=4

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Isolated test database - MySQL for comprehensive testing
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=acme_corp_csr_test
DB_USERNAME=root
DB_PASSWORD=root

# Database optimization for parallel testing
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_LOCK_TIMEOUT=5
DB_DEADLOCK_RETRIES=3

# Optimize for testing performance
SESSION_DRIVER=array
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Parallel test execution
PEST_PARALLEL=true
PEST_PROCESSES=4

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

CACHE_STORE=array
CACHE_DRIVER=array
CACHE_PREFIX=test_
CACHE_TTL=60

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=array
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="test@acme-corp.com"
MAIL_FROM_NAME="${APP_NAME}"

# Disable external services for testing
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Payment gateways in test mode
STRIPE_MODE=test
STRIPE_SECRET=sk_test_dummy
STRIPE_PUBLIC=pk_test_dummy
STRIPE_WEBHOOK_SECRET=whsec_test_dummy

PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=test_client
PAYPAL_SECRET=test_secret

# Disable monitoring in tests
TELESCOPE_ENABLED=false
PULSE_ENABLED=false
NIGHTWATCH_ENABLED=false
SENTRY_LARAVEL_DSN=

VITE_APP_NAME="${APP_NAME}"

# Browser Testing Configuration
DUSK_DRIVER=chrome
DUSK_HEADLESS_DISABLED=false
DUSK_CHROME_BINARY="/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
DUSK_WINDOW_SIZE=1920,1080
DUSK_TIMEOUT=30

# Playwright Configuration (Alternative to Dusk)
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_VIEWPORT_WIDTH=1920
PLAYWRIGHT_VIEWPORT_HEIGHT=1080
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_BASE_URL=http://127.0.0.1:8000

# Browser Test Database (separate from unit/integration tests)
BROWSER_DB_CONNECTION=mysql
BROWSER_DB_HOST=127.0.0.1
BROWSER_DB_PORT=3306
BROWSER_DB_DATABASE=acme_corp_csr_dusk_test
BROWSER_DB_USERNAME=root
BROWSER_DB_PASSWORD=root

# Test Server Configuration
TEST_SERVER_HOST=127.0.0.1
TEST_SERVER_PORT=8000
TEST_SERVER_URL=http://127.0.0.1:8000

# Browser Test Optimization
BROWSER_TEST_PARALLEL=false
BROWSER_TEST_SCREENSHOTS=true
BROWSER_TEST_VIDEOS=false
BROWSER_TEST_TRACE=false

# E2E Test Configuration
E2E_BASE_URL=http://127.0.0.1:8000
E2E_ADMIN_EMAIL=admin@acme-corp.test
E2E_ADMIN_PASSWORD=testing123
E2E_USER_EMAIL=user@acme-corp.test
E2E_USER_PASSWORD=testing123

# Laravel Scout Configuration (Disable for testing)
SCOUT_DRIVER=null
SCOUT_QUEUE=false
SCOUT_IDENTIFICATION=false

# Disable external connections that could cause hanging
QUEUE_CONNECTION=sync
BROADCAST_CONNECTION=null
MAIL_MAILER=array

# Disable all third-party services
SCOUT_DRIVER=null
SOCIALITE_PROVIDERS_DISABLED=true
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Database optimization for tests
DB_FOREIGN_KEYS=false
DB_STRICT_MODE=false
DB_TRANSACTION_ISOLATION=READ-COMMITTED
DB_INNODB_FLUSH_LOG=2
DB_SYNC_BINLOG=0

# Disable notifications during testing
NOTIFICATIONS_ENABLED=false

# Disable cache warming for tests to prevent redirects
CACHE_WARMING_ENABLED=false

# Test Performance Settings
TEST_MEMORY_LIMIT=2G
TEST_MAX_EXECUTION_TIME=300
TEST_SLOW_QUERY_THRESHOLD=100
LOG_QUERIES=false

# Schema optimization
USE_CACHED_SCHEMA=true
SCHEMA_DUMP_PATH=database/schema/mysql-schema.sql