APP_NAME="ACME CSR Platform"
APP_ENV=local
APP_KEY=
APP_DEBUG=false
DEBUGBAR_ENABLED=true
APP_URL=https://app.acme-corp-optimy.orb.local

# Sanctum Configuration for API Authentication
SANCTUM_STATEFUL_DOMAINS=*.acme-corp-optimy.test,acme-corp-optimy.test,localhost,127.0.0.1,*.app.acme-corp-optimy.orb.local

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration for Docker
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=acme_corp_csr
DB_USERNAME=acme
DB_PASSWORD=secret
DB_ROOT_PASSWORD=root

# Redis Configuration for Docker
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache and Session Configuration for Docker
CACHE_STORE=redis
SESSION_DRIVER=redis
SESSION_CONNECTION=
SESSION_LIFETIME=120
SESSION_STORE=
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=

# Queue Configuration for Docker
QUEUE_CONNECTION=redis

# Cache Warming Configuration
CACHE_WARMING_ENABLED=true

# Provider Caching (works with any debug setting)
PROVIDERS_CACHE_ENABLED=true
PROVIDERS_CACHE_TTL=86400
PROVIDERS_CACHE_FORCE_REFRESH=false

FILESYSTEM_DISK=local

# Mail Configuration for Docker
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@acme-corp.com"
MAIL_FROM_NAME="${APP_NAME}"

# Laravel Scout & Meilisearch Configuration for Docker
SCOUT_DRIVER=meilisearch
SCOUT_PREFIX=acme_
SCOUT_QUEUE=false
SCOUT_CHUNK_SIZE=1000
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_KEY=masterKey
MEILISEARCH_ENV=development

# Mercure Configuration for Real-time Updates
MERCURE_PUBLISHER_JWT_KEY=
MERCURE_SUBSCRIBER_JWT_KEY=

# Local Port Configuration
APP_PORT=8000
APP_HTTPS_PORT=8443
APP_HTTP3_PORT=8443
MEILISEARCH_PORT=7700
MAILPIT_SMTP_PORT=1025
MAILPIT_UI_PORT=8025
PMA_PORT=8080
REDIS_COMMANDER_PORT=8081

# AWS Configuration (if needed)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"

# Multi-Tenancy Configuration
CENTRAL_DOMAIN=acme-corp-optimy.test
TENANT_IDENTIFICATION=subdomain
TENANT_DATABASE_PREFIX=tenant_
TENANT_DATABASE_SUFFIX=
TENANT_USER_LIMIT=1000
TENANT_CAMPAIGN_LIMIT=100
TENANT_STORAGE_LIMIT_MB=5120
TENANT_EMAIL_LIMIT=10000
TENANCY_CENTRAL_DOMAINS="127.0.0.1,localhost,acme-corp-optimy.test,acme-corp.go2digit.al,staging.acme-corp.go2digit.al,acme-corp-optimy.frp.go2digit.al,app.acme-corp-optimy.orb.local"
