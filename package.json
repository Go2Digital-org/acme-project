{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "# === FRONTEND LINTING SCRIPTS ===": "",
        "lint": "echo 'Frontend linting not configured yet'",
        "lint:fix": "echo 'Frontend lint fixing not configured yet'",
        "lint:js": "echo 'JavaScript linting not configured yet'",
        "lint:css": "echo 'CSS linting not configured yet'",
        "lint:vue": "echo 'Vue linting not configured yet'",
        "# === TESTING SCRIPTS ===": "",
        "test:unit": "echo 'Unit tests not configured yet'",
        "test:playwright": "echo 'Use: ./vendor/bin/pest tests/Browser (Pest Browser tests are in ./tests/Browser, not Playwright)'",
        "test:playwright:ui": "echo 'Note: Browser tests use Pest Plugin, not standalone Playwright. Run: ./vendor/bin/pest tests/Browser'",
        "test:playwright:debug": "echo 'For debugging browser tests: BROWSER_HEADLESS=false ./vendor/bin/pest tests/Browser'",
        "test:playwright:headed": "echo 'For headed browser tests: BROWSER_HEADLESS=false ./vendor/bin/pest tests/Browser'",
        "test:playwright:chrome": "playwright test --project=chromium-desktop",
        "test:playwright:firefox": "playwright test --project=firefox-desktop",
        "test:playwright:webkit": "playwright test --project=webkit-desktop",
        "test:playwright:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
        "test:playwright:tablet": "playwright test --project=tablet-chrome --project=ipad-safari",
        "test:playwright:accessibility": "playwright test --project=accessibility-chrome",
        "test:playwright:performance": "playwright test --project=performance-chrome",
        "test:playwright:report": "playwright show-report",
        "test:playwright:install": "playwright install",
        "test:playwright:install-deps": "playwright install-deps",
        "install:browsers": "playwright install"
    },
    "devDependencies": {
        "@axe-core/playwright": "^4.10.2",
        "@playwright/test": "^1.55.0",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/typography": "^0.5.16",
        "@tailwindcss/vite": "^4.0.0",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^2.0.0",
        "playwright": "^1.55.0",
        "tailwindcss": "^4.0.0",
        "vite": "^7.0.4"
    },
    "dependencies": {
        "@types/node": "^24.2.1",
        "@vitejs/plugin-vue": "^6.0.1",
        "@vue/tsconfig": "^0.7.0",
        "alpinejs": "^3.14.9",
        "date-fns": "^4.1.0",
        "gsap": "^3.13.0",
        "motion": "^12.16.0",
        "pinia": "^3.0.3",
        "sweetalert2": "^11.22.5",
        "typescript": "^5.9.2",
        "vue": "^3.5.18",
        "vue-i18n": "^9.14.5",
        "vue-router": "^4.5.1"
    },
    "optionalDependencies": {
        "@rollup/rollup-linux-x64-gnu": "*",
        "@rollup/rollup-linux-arm64-gnu": "*",
        "lightningcss-linux-x64-gnu": "*",
        "lightningcss-linux-arm64-gnu": "*"
    }
}
